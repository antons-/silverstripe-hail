{
  "name": "firebrand/silverstripe-hail",
  "description": "Silverstripe 4 plugin to integrate with Hail (https://get.hail.to)",
  "type": "silverstripe-vendormodule",
  "keywords": [
    "silverstripe",
    "News",
    "Hail",
    "Content"
  ],
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Firebrand Limited",
      "email": "developers@firebrand.nz"
    }
  ],
  "require": {
    "silverstripe/cms": "^4.1",
    "silverstripe/framework": "^4.1",
    "silverstripe/environmentcheck": "^2.0",
    "guzzlehttp/guzzle": "^6.3"
  },
  "autoload": {
    "psr-4": {
      "Firebrand\\Hail\\": "src/"
    }
  },
  "extra": {
    "expose": [
      "client/dist",
      "thirdparty"
    ],
    "branch-alias": {
      "dev-develop": "4.0.x-dev"
    }
  },
  "prefer-stable": true,
  "minimum-stability": "stable",
  "suggest": {
    "firebrand/silverstripe-hail-elemental": "Add Hail Carousel Element type to Elemental",
    "firebrand/silverstripe-hail-opengraph": "Add OpenGraph tags to Hail Pages and Hail Articles"
  }
}
